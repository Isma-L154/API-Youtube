@page
@model AgregarListaRecomendadoModel
@{
    
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Caso Practico 2 - Grupo #4</div>
    </div>
</header>

<div>
    <div class="w-100 p-4 d-flex justify-content-center pb-4"><H1>Agregar Lista de Recomendados</H1></div>
    <div class="w-100 p-4 d-flex justify-content-center pb-4 border rounded-3">
        <form method="post">
            <div class="form-group">
                <label asp-for="lista.Nombre" class="control-label"></label>
                <input asp-for="lista.Nombre" class="form-control" placeholder="Nombre">
                <span asp-validation-for="lista.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="lista.Descripcion" class="control-label"></label>
                <input asp-for="lista.Descripcion" class="form-control" placeholder="Descripcion">
                <span asp-validation-for="lista.Descripcion" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row p-4">
                <input type="submit" value="Agregar" class="btn btn-success p-md-2 pl-3" />
                <a class="btn btn-secondary btn-block mt-2" asp-page="./Index">Regresar</a>
            </div>

        </form>

    </div>
</div>
