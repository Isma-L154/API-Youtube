@page "{id}"
@model WebRazor.Pages.Recomendados.Editar
@{
    
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Caso Practico 2 - Grupo #4</div>
    </div>
</header>

<div>
    <div class="w-100 p-4 d-flex justify-content-center pb-4"><H1>Editar Lista de Recomendados</H1></div>
    <div class="w-100 p-4 d-flex justify-content-center pb-4 border rounded-3">
        <form method="post">
            <input type="hidden" asp-for="lista.Id" value="@Model.lista.Id"/>
            
            <div class="form-group">
                <label asp-for="lista.Nombre" class="control-label"></label>
                <input asp-for="lista.Nombre" class="form-control" placeholder="Digite el nombre de la lista"></input>
                <span asp-validation-for="lista.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="lista.Descripcion" class="control-label"></label>
                <input asp-for="lista.Descripcion" class="form-control" placeholder="Digite la descripcion de la lista"></input>
                <span asp-validation-for="lista.Descripcion" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="row p-4">
                <input type="submit" value="Actualizar" class="btn btn-success p-md-2 pl-3" />
                <a asp-page="./Index" class="btn btn-primary btn-block mt-2"> Regresar</a>
            </div>

        </form>

    </div>
</div>


@section Scripts
                {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}